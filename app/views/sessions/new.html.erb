<h2 class="ui center aligned icon header">
  <i class="circular coffee icon"></i>
  Let's chat
</h2>

<!-- login divider segment -->
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

        <%= form_for(:session,  :html => {class: "ui form", role: "form"}, url: login_path) do |f|%>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, class: "", placeholder:"Username"%>
            <!-- <input type="text" placeholder="Username"> -->
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, autocomplete: "off" %>
            <!-- <input type="password"> -->
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui black submit button"%>
        <!-- <div class="ui black submit button">Login</div> -->
        <% end %>


    
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
