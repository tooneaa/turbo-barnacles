<h2 class="ui center aligned icon header">
  <i class="circular coffee icon"></i>
  Let's chat
</h2>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <!-- chat box goes here -->
        <div class="ui feed">
        <h4 class="ui header">Followers Activity</h4>

          <%= render @messages %>

        </div>
      </div>
      <div class="extra content">
        <div class="ui fluid icon input">
          <input type="text" placeholder="Enter your message here....">

            <i class="black inverted edit icon"></i>


        </div>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <!-- vertical menu goes here -->
        <div class="ui vertical fluid inverted menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
